@* Define the model *@
@model Producer;

@* Define ViewData *@
@{
    ViewData["Title"] = "Add a new Producer";
}

@* Write the HTML code *@
<div class="text-center">
    <section id="hero">
        <div class="hero-container">
            <div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active" style="background-image: url(https://www.bhmpics.com/downloads/animated-svg-wallpaper/3.motion-background.svg)">
                        <div class="carousel-container">
                            <div class="carousel-content">
                                <h1> Add a Producer </h1>
                                <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group text-center pad">
                                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 200px" />
                                    </div>
                                    <div class="form-group pad">
                                        <label asp-for="ProfilePictureUrl" class="control-label"></label>
                                        <input asp-for="ProfilePictureUrl" class="form-control" />
                                        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                                    </div>
                                    <div class="form-group pad">
                                        <label asp-for="FullName" class="control-label"></label>
                                        <input asp-for="FullName" class="form-control" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group pad">
                                        <label asp-for="Bio" class="control-label"></label>
                                        <textarea asp-for="Bio" class="form-control"></textarea>
                                        <span asp-validation-for="Bio" class="text-danger"></span>
                                    </div>
                                    <div class="form-group pad">
                                        <input type="submit" value="Create" class="btn btn-success float-right" />
                                        <a class="btn btn-secondary" asp-action="Index">Show All</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureUrl").val();
        })
        $("#ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}